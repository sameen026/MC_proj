<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_keyboard_backspace_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/title_tv"
            android:text="Plaza Details"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="22dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/save_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/title_tv"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_bookmark_black_24dp"
            />
    </RelativeLayout>
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_marginTop="85dp"
        android:layout_height="200dp"
        class="com.google.android.gms.maps.MapFragment" />

    <TextView
        android:id="@+id/plaza_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <uz.jamshid.library.ExactRatingBar
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/plaza_name_tv"
        app:starCount="5"
        app:isIndicator="false"
        app:starFillColor="@color/colorPrimary"
        app:starSize="30"
        app:starValue="0.0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading"
        android:layout_toRightOf="@id/rate"
        android:layout_below="@id/plaza_name_tv"
        android:layout_marginLeft="10dp"
        android:id="@+id/view_comments_count_tv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all Feedbacks"
        android:layout_below="@id/plaza_name_tv"
        android:layout_marginRight="20dp"
        android:id="@+id/view_comment_tv"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/loc_img"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_location_on_black_24dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/plaza_area_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate"
        android:layout_toRightOf="@id/loc_img"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/charges_car_img"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/plaza_area_tv"
        android:background="@drawable/money"/>
    <TextView
        android:id="@+id/plaza_charges_car_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plaza_area_tv"
        android:layout_toRightOf="@id/charges_car_img"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/charges_bike_img"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/plaza_charges_car_tv"
        android:background="@drawable/money"/>
    <TextView
        android:id="@+id/plaza_charges_bike_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plaza_charges_car_tv"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/charges_bike_img"/>

    <ImageView
        android:id="@+id/bike_img"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/plaza_charges_bike_tv"
        android:background="@drawable/bicycle"/>
    <TextView
        android:id="@+id/slot_bike_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plaza_charges_bike_tv"
        android:layout_toRightOf="@id/bike_img"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/car_img"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/slot_bike_tv"
        android:background="@drawable/car"/>
    <TextView
        android:id="@+id/slot_car_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slot_bike_tv"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/car_img"/>

    <Button
        android:id="@+id/give_feedback_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/leave_feedback"
        android:layout_below="@id/slot_car_tv"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>
</RelativeLayout>