    <RelativeLayout
        android:id="@+id/pp_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pp_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/privacy_policy" />

        <TextView
            android:id="@+id/privacy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/pp_image"
            android:text="Privacy Policy"
            android:textSize="@dimen/left" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/change_pass_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pp_ll"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="@dimen/left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/about_us"
            android:id="@+id/about_us_image"/>

        <TextView
            android:id="@+id/about_us__tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/about_us_image"
            android:layout_marginLeft="@dimen/left"
            android:text="About Us"
            android:textSize="@dimen/left" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_pass_ll"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="@dimen/left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/change_password"
            android:id="@+id/change_pass_image"/>

        <TextView
            android:id="@+id/change_pass_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/change_pass_image"
            android:layout_marginLeft="@dimen/left"
            android:text="Change Password"
            android:textSize="@dimen/left" />

    </RelativeLayout>




